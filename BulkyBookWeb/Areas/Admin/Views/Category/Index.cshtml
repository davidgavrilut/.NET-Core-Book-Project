@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 mb-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create Category
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody class="align-middle">
        @foreach(var obj in Model) {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.DisplayOrder
                </td>
                    <td class="d-flex">
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-info mx-2 d-flex justify-content-center align-items-center"><i class="bi bi-pencil-square me-1"></i>Edit</a>
                    </div>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2 d-flex justify-content-center align-items-center"><i class="bi bi-trash-fill me-1"></i>Delete</a>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>