@model CoverType

<form method="post" asp-action="Edit">
    <div class="border border-dark p-3 mt-4">
        <div class="=row pb-2">
            <h2 class="test-primary">
                Edit Cover Type
            </h2>
            <hr />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary me-1" style="width: 200px">Update</button>
            <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width: 200px">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}