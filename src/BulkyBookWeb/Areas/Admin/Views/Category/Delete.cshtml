@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border border-dark p-3 mt-4">
        <div class="=row pb-2">
            <h2 class="test-primary">
                Delete Category
            </h2>
            <hr />
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
            <button type="submit" class="btn btn-danger me-1" style="width: 200px">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 200px">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }